#addJobContainer.modal.fade{tabindex: "-1", role: "dialog", 'aria-labelledby': "myModalLabel"}
	.modal-dialog{role:"document"}
		.modal-content
			.modal-header
				%h4.modal-title= "Add New Jenkins Job"
			.modal-body
				.form-group
					%label{for: "username"}= "Job Name"
					%input#jobName.form-control{type: "text", placeholder: "Enter job name"}
			%div.modal-footer
				%button.btn.btn-default{type: "button", 'data-dismiss': "modal"}= "Close"
				%button#addJobButton.btn.btn-success{type: "button"}= "Add"
